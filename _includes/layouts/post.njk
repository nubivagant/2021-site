---
layout: layouts/base.njk
section: post
---

<article>
  <h1>{{ title }}</h1>

  {{ layoutContent | safe }}
<p>
  <small>
    <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time> by <a href="/authors/{{ author | slug }}/">{{ author }}</a>
  </small>
</p>
  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>

<nav>
  <a href="{{ '/notes/' | url }}">‚Üê All notes</a>
</nav>
